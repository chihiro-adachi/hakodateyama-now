{
  "name": "@hakodate/hakodate",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm build:islands && wrangler dev",
    "deploy": "pnpm build:islands && wrangler deploy",
    "build:islands": "esbuild src/view/islands/client.tsx --bundle --minify --format=esm --outfile=public/islands.js --jsx=automatic --jsx-import-source=hono/jsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.5",
    "hono": "^4.7.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.0",
    "esbuild": "^0.24.2",
    "typescript": "^5.8.2",
    "vitest": "^4.0.0"
  }
}
