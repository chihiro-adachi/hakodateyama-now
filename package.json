{
  "name": "hakodate-monorepo",
  "private": true,
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @hakodate/hakodate dev",
    "deploy": "pnpm --filter @hakodate/hakodate run deploy",
    "typecheck": "pnpm --filter @hakodate/hakodate typecheck",
    "lint": "pnpm --filter @hakodate/hakodate lint",
    "lint:fix": "pnpm --filter @hakodate/hakodate lint:fix",
    "format": "pnpm --filter @hakodate/hakodate format",
    "format:check": "pnpm --filter @hakodate/hakodate format:check",
    "test": "pnpm --filter @hakodate/hakodate test",
    "test:coverage": "pnpm --filter @hakodate/hakodate test:coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
